<%-include('partials/header.ejs')%>
  <div class="container d-flex align-items-center justify-content-center">
    <div class="row">
        <%data.forEach((element)=>{%>
        <div style="width: 35rem;">
            <!--<img src="https://covers.openlibrary.org/b/olid/<%=element.cover_key%>-L.jpg" class="card-img-top" alt="...">-->
            <div class="card-body">
              <h2 class="card-title"><%=element.title%></h2>
              <h3><%=element.author_name%></h3>
              <form action="/edit" method="post">
                <label for="short_note">Short Note:</label>
                <textarea id="short_note" type="text" class="card-text form-control" name="short_note" rows="5" autofocus="true"><%=element.short_note%></textarea>
                <p class="mt-3">Date: <%=element.title_date%></p>
                <label for="rating">Rating:</label>
                <input class="form-control" id="rating" type="number" name="rating" value="<%=element.rating%>" min="1" max="5">
                <button style="width:100%;" type="submit" class="btn btn-primary mt-3">Submit</button> 
              </form>
            </div>
          </div>
        <%})%>  
    </div>
  </div>
<%-include('partials/footer.ejs')%>